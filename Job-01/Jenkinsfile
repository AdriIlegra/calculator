pipeline {
    agent any
    tools {
        jfrog 'Jfrog-cli'
    }

    stages {
        stage('Build') {
            steps {
                sh 'jfrog rt c --url=http://localhost:8081/artifactory --user=admin --password=password --interactive=false'
                sh 'jfrog rt bag my-local-repo my-local-repo'
                sh 'jfrog rt bp my-local-repo my-local-repo'
            }
        }
    }

    post {
        always {
            sh 'jfrog rt bd my-local-repo'
        }
    }

}