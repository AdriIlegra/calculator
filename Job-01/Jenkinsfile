pipeline {
    agent any

    environment {
        CI = 'true'
        ARTIFACTORY_TOKEN = credentials('artfactory-token')
    }

    stages {
        stage('Upload to Artifactory') {
            steps {
                script {
                    def server = Artifactory.server 'calculadora'
                    def uploadSpec = """{
                        "files": [
                            {
                                "pattern": "/home/gradle/src/build/libs/tema-06-0.0.1-SNAPSHOT.jar",
                                "target": "calculadora/"
                            }
                        ]
                    }"""
                    server.upload(uploadSpec)
                }
            }
        }
    }
}
