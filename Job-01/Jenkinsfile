pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Execute as etapas de construção do seu projeto aqui
            }
        }

        stage('Upload to Artifactory') {
            steps {
                rtUpload (
                    serverId: 'artifcatory_credential', // Nome do servidor configurado no Jenkins
                    spec: """{
                        "files": [
                            {
                                "pattern": "artifact.zip",
                                "target": "repo-name/path/in/artifactory/artifact.zip"
                            }
                            ]
                            }"""
                )
            }
        }
    }
}

