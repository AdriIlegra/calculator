pipeline {
    agent any

    environment {
        CI = 'true'
        ARTIFACTORY_SERVER_ID = 'tema-final-1' // Nome do servidor de Artifactory configurado no Jenkins
    }

    stages {
        stage('Git Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/AdriIlegra/calculator.git'
            }
        }

        stage('Run Tests') {
            steps {
                sh './gradlew test'
            }
        }

        stage('Build Jar') {
            steps {
                sh './gradlew clean build'
            }
        }

        stage('Upload artifact to Artifactory') {
            environment {
                JFROG_PASSWORD = credentials('token_jfrog')
            }

            steps {
                sh 'curl -u admin:$JFROG_PASSWORD XPUT http://localhost:8082/artifactory/tema-final-01/calculator-0.0.1-SNAPSHOT.jar -T build/libs/tema-06-0.0.1-SNAPSHOT.jar'
            }
        }
    }
}
