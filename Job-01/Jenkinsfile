pipeline {
    agent any

    environment {
        CI = 'true'
        ARTIFACTORY_TOKEN = credentials('artfactory-token')
    }

    stages {
        stage('Build') {
            steps {
                sh 'echo "Construindo o aplicativo..."'
                // Adicione comandos reais de construção aqui
            }
        }

        stage('Test') {
            steps {
                sh 'echo "Executando testes..."'
                // Adicione comandos reais de teste aqui
            }
        }

        stage('Upload to Artifactory') {
            steps {
                script {
                    def server = Artifactory.server 'calculadora' // 'calculadora' deve ser o nome configurado no Jenkins

                    def uploadSpec = """{
                        "files": [
                            {
                                "pattern": "/caminho/para/o/seu/arquivo/aqui.jar", // Substitua pelo caminho do seu arquivo
                                "target": "calculadora/" // Substitua se necessário
                            }
                        ]
                    }"""
                    server.upload(uploadSpec)
                }
            }
        }
    }
}
