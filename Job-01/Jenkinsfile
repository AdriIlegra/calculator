pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Execute as etapas de construção do seu projeto aqui
            }
        }

        stage('Upload to Artifactory') {
            steps {
                rtUpload (
                    serverId: 'ArtifactoryServer', // Nome do servidor configurado no Jenkins
                    spec: """{
                        "files": [
                            {
                                "pattern": "path/to/your/artifact.zip",
                                "target": "repo-name/path/in/artifactory/artifact.zip"
                            }
                        ]
                    }"""
                )
            }
        }
    }
}
