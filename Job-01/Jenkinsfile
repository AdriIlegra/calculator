pipeline {
    agent any

    environment {
        CI = 'true'
        ARTIFACTORY_SERVER_ID = 'tema-01-final' // Nome do servidor de Artifactory configurado no Jenkins
    }

    stages {
        stage('Git Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/AdriIlegra/calculator.git'
            }
        }

        stage('Run Tests') {
            steps {
                sh './gradlew test'
            }
        }

        stage('Build Jar') {
            steps {
                sh './gradlew clean build'
            }
        }

        stage('Publish Artifacts') {
            steps {
                rtUpload (
                    serverId: "${env.ARTIFACTORY_SERVER_ID}",
                    spec: '''{
                        "files": [
                            {
                                "pattern": "build/libs/tema-06-0.0.1-SNAPSHOT.jar",
                                "target": "tema-final-01/"
                            }
                        ]
                    }'''
                )
            }
        }
    }
}
