pipeline {
    agent any

    stages {
        stage('Upload para o Artifactory') {
            steps {
                script {
                    def server = Artifactory.server 'artifactory-server'
                    def uploadSpec = """{
                        "files": [
                            {
                                "pattern": "**/target/*.war",
                                "target": "releases/${APP_REPO}/${version.trim()}/"
                            }
                        ]
                    }"""
                    server.upload(uploadSpec)
                }
            }
        }
    }
}
