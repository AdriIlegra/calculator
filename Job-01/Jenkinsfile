pipeline {
    agent any

    stages {

        stage('Build') {
            steps {
                sh './gradlew clean build'
            }
        }

        stage('Artifactory') {
            steps {
                rtUpload (
                    serverId: 'artifactory',
                    spec: '''{
                        "files": [
                            {
                                "pattern": "build/libs/*.jar",
                                "target": "libs/"
                            }
                        ]
                    }'''
                )
            }
        }
    }
}



