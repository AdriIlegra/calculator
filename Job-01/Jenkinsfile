pipeline {
    agent any
environment {
        CI = 'true'
        ARTIFACTORY_SERVER_ID = 'tema-final-01' // Nome do servidor de Artifactory configurado no Jenkins
    }
    stages {
        stage('Git Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/AdriIlegra/calculator.git'
            }
        }
        stage('Run Tests') {
            steps {
                script {
                    def gradlewFile = "${env.WORKSPACE}/gradlew"
                    def command = "chmod +x ${gradlewFile}"

                    sh label: 'Grant execute permission', script: command

                    sh label: 'Run Tests', script: "${gradlewFile} test"
                }
            }
        }
        stage('Build Jar') {
            steps {
                sh './gradlew clean build'
            }
        }
        stage('Upload artifact to Artifactory') {
         withCredentials([usernamePassword(credentialsId: 'artifactory-credentials', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                     sh "curl -u ${USERNAME}:${PASSWORD} -XPUT http://artifactory:8082/artifactory/tema-final-01/tema-06-0.0.1-SNAPSHOT.jar -T build/libs/tema-06-0.0.1-SNAPSHOT.jar"
            }
        }
    }
}
