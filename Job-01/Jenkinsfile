pipeline {
    agent any

    stages {

        stage('Build') {
            steps {
                sh './gradlew clean build'
            }
        }

        stage('Artifactory') {
            steps {
                rtUpload(
                    serverId: "calculadora",
                    spec: """{
                        "files": [
                        {
                            "pattern": "build/libs/tema-final-01-calculator-0.0.1-SNAPSHOT.jar",
                            "target": "calculadora"
                        }
                        ]
                    } """


                    )
            }
        }

    }
}